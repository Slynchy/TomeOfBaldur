{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "jsx": "react-native",
    "allowJs": true,
    "sourceMap": true,
    "paths": {},
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./lib/types"
    ]
  },
  "exclude": [
    "webpack.dev.config.js",
    "webpack.prod.config.js",
    "misc/**/*",
    "**/*.tsx",
    "build/**/*",
    "tools/**/*"
  ]
}
